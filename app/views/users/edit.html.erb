<%= form_for @user do | f |%>
<table class="table table-striped">
  <tr>
    <td><%= f.label :name%></td>
    <td><%= f.text_field :name%></td>
  </tr>
  <tr>
    <td><%= f.label :email%></td>
    <td><%= f.email_field :email%></td>
  </tr>
  <tr>
    <td><%= f.label :mobile_no%></td>
    <td><%= f.text_field :mobile_no%></td>
  </tr>
  <tr>
    <td><%= f.submit %></td>
  </tr>
</table>
<%end%>



<%= link_to "Home" , users_path%>
